.cropper-mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.cropper-panel {
  width: 80%;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.cropper-header {
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  background: #FFF9E6;
  border-bottom: 1rpx solid rgba(255, 184, 0, 0.2);
}

.cropper-body {
  padding: 24rpx;
  display: flex;
  justify-content: center;
}

.cropper-canvas {
  background: #000;
  border-radius: 12rpx;
}

.cropper-footer {
  display: flex;
}

.cropper-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 0;
  border: 2rpx solid;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cropper-btn.cancel {
  color: #666;
  border-color: #e0e0e0;
  background: #f8f8f8;
}

.cropper-btn.confirm {
  color: #fff;
  border-color: #FFB800;
  background: #FFB800;
}
