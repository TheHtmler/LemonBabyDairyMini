.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  overflow: hidden;
}

.modal-content {
  width: 80%;
  max-width: 560rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  background-color: #FFF9E6;
  border-bottom: 1rpx solid rgba(255, 184, 0, 0.2);
  color: #333;
}

.modal-body {
  padding: 24rpx 28rpx;
}

.ratio-lines {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.ratio-line {
  font-size: 26rpx;
  color: #555;
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  border-top: 2rpx solid rgba(0, 0, 0, 0.05);
}

.modal-btn {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  border-radius: 0;
  border: none;
}

.modal-btn.confirm {
  color: #ffffff;
  background-color: #FFB800;
}
