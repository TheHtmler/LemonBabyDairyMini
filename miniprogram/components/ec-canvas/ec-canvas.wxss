.chart-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.ec-canvas {
  width: 100%;
  height: 100%;
}

.tooltip {
  position: absolute;
  background: rgba(0, 0, 0, 0.85);
  color: #fff;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  pointer-events: none;
  z-index: 1000;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  min-width: 180rpx;
}

.tooltip-date {
  font-weight: bold;
  margin-bottom: 6rpx;
  padding-bottom: 6rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
  font-size: 24rpx;
}

.tooltip-item {
  display: flex;
  align-items: center;
  margin: 4rpx 0;
  line-height: 1.5;
}

.tooltip-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.tooltip-label {
  color: rgba(255, 255, 255, 0.8);
  margin-right: 4rpx;
}

.tooltip-value {
  font-weight: bold;
  color: #fff;
}

