/* pages/data-analysis/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #FFF5D6 0%, #FFFFFF 200rpx);
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #FFE4B5;
  border-top-color: #FFB800;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #999;
}

/* 主要内容 */
.content {
  padding: 0;
}

/* 时间维度选择 */
.dimension-selector {
  background: #FFFFFF;
  padding: 30rpx 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.dimension-tabs {
  display: flex;
  background: #F5F5F5;
  border-radius: 12rpx;
  padding: 6rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #FFB800;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #FFFFFF;
  font-weight: 600;
}

/* 日期导航 */
.date-navigation {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 30rpx;
  padding: 40rpx 30rpx;
  background: #FFFFFF;
  margin-top: 2rpx;
}

.nav-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFF5D6;
  border-radius: 50%;
  transition: all 0.2s;
}

.nav-btn-hover {
  background: #FFE4B5;
  transform: scale(0.95);
}

.nav-icon {
  font-size: 24rpx;
  color: #FFB800;
}

.date-range {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx 40rpx;
  background: #FAFAFA;
  border-radius: 16rpx;
  transition: all 0.2s;
  min-width: 400rpx;
}

/* 仅月视图可点击 */
.date-range.clickable:active {
  background: #F0F0F0;
  transform: scale(0.98);
}

.date-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  text-align: center;
  flex: 1;
}

.date-picker-icon {
  font-size: 36rpx;
  opacity: 0.7;
  flex-shrink: 0;
}

/* 日期选择器 */
.date-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.date-picker-modal {
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  overflow: hidden;
  animation: slideUp 0.3s;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  background: linear-gradient(135deg, #FFB800 0%, #FFA500 100%);
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.picker-close {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #FFFFFF;
  opacity: 0.8;
}

.picker-content {
  padding: 30rpx;
}

.picker-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.picker-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F5;
  border-radius: 50%;
  font-size: 28rpx;
  color: #666;
}

.picker-btn:active {
  background: #E0E0E0;
}

.picker-value {
  flex: 1;
  text-align: center;
}

.picker-year {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.picker-months {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.month-item {
  padding: 20rpx;
  text-align: center;
  background: #F5F5F5;
  border-radius: 12rpx;
  transition: all 0.2s;
}

.month-item.active {
  background: #FFB800;
}

.month-item:active {
  transform: scale(0.95);
}

.month-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.month-item.active .month-text {
  color: #FFFFFF;
  font-weight: 600;
}

.picker-footer {
  display: flex;
  border-top: 1rpx solid #F0F0F0;
}

.picker-action {
  flex: 1;
  padding: 30rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
}

.picker-action.cancel {
  color: #999;
  border-right: 1rpx solid #F0F0F0;
}

.picker-action.cancel:active {
  background: #F5F5F5;
}

.picker-action.confirm {
  color: #FFB800;
}

.picker-action.confirm:active {
  background: #FFF5D6;
}

/* 统计卡片 */
.statistics-card {
  margin: 30rpx 30rpx;
  background: linear-gradient(135deg, #FFB800 0%, #FFA500 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 184, 0, 0.3);
}

.stat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.stat-title {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.stat-days {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stat-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 10rpx;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.stat-value.natural {
  color: #4CAF50;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.stat-value.special {
  color: #2196F3;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.stat-unit {
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 4rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 30rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 图表容器 */
.charts-container {
  padding: 0 30rpx 50rpx;
}

.chart-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.chart-header {
  margin-bottom: 30rpx;
}

.chart-title {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.chart-subtitle {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.chart-wrapper {
  width: 100%;
  height: 500rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

