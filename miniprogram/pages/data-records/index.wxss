/* 空数据添加按钮样式 */
.empty-actions {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.empty-actions .add-btn {
  background: rgba(255, 184, 0, 0.1);
  border: 1rpx solid rgba(255, 184, 0, 0.2);
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-actions .add-btn:active {
  background: rgba(255, 184, 0, 0.2);
}

.empty-actions .add-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.empty-actions .add-btn text {
  font-size: 28rpx;
  color: #FFB800;
}

/* 药物选择器样式 */
.picker {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 80rpx;
  box-sizing: border-box;
}

.picker.placeholder {
  color: #999;
}

.volume-display {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 80rpx;
  box-sizing: border-box;
}

/* 删除按钮样式 */
.delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 107, 107, 0.1);
  border-radius: 50%;
  margin-left: 16rpx;
}

.delete-btn:active {
  background-color: rgba(255, 107, 107, 0.2);
}

.delete-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 调整记录项布局以适应删除按钮 */
.feeding-record {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 8rpx;
  border-bottom: 1px solid #f0f0f0;
  align-items: center;
  position: relative;
}

.feeding-record:last-child {
  border-bottom: none;
}

.time-info {
  flex: 0.4;
}

.volume-info {
  flex: 0.5;
  text-align: right;
}

/* 调整用药记录布局 */
.medication-record {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
}

.medication-info {
  flex: 0.5;
}

.medication-time {
  flex: 0.3;
  text-align: right;
}

/* 删除确认弹窗样式 */
.confirm-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-modal-content {
  width: 80%;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

.confirm-modal-title {
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.confirm-modal-message {
  padding: 40rpx 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.confirm-modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.confirm-modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
}

.confirm-modal-btn.cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.confirm-modal-btn.confirm {
  color: #FF6B6B;
  font-weight: 500;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-btn {
  width: 68rpx;
  height: 68rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.action-btn.edit-btn {
  background-color: rgba(255, 184, 0, 0.15);
  border: 1rpx solid rgba(255, 184, 0, 0.3);
}

.action-btn.edit-btn:active {
  background-color: rgba(255, 184, 0, 0.25);
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.action-btn.delete-btn {
  background-color: rgba(255, 71, 87, 0.15);
  border: 1rpx solid rgba(255, 71, 87, 0.3);
}

.action-btn.delete-btn:active {
  background-color: rgba(255, 71, 87, 0.25);
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.9;
}

/* === 排便记录样式 === */

/* 排便记录分组 */
.bowel-group {
  background: #ffffff;
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 184, 0, 0.1);
  overflow: hidden;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 184, 0, 0.1);
}

.bowel-group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: rgba(255, 184, 0, 0.1);
  border-bottom: 2rpx solid rgba(255, 184, 0, 0.1);
}

.bowel-group-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: flex;
  align-items: center;
}

.bowel-group-name::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #FFB800;
  border-radius: 50%;
  margin-right: 12rpx;
}

.bowel-group-count {
  font-size: 24rpx;
  color: #666;
  background: rgba(255, 184, 0, 0.15);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 184, 0, 0.3);
}

.bowel-group-records {
  padding: 0;
}

.bowel-record-item {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid rgba(255, 184, 0, 0.08);
  transition: all 0.3s ease;
  background: #ffffff;
}

.bowel-record-item:last-child {
  border-bottom: none;
}

.bowel-record-item:active {
  background: rgba(255, 184, 0, 0.05);
}

.bowel-record-item .record-content {
  flex: 1;
  margin-right: 16rpx;
}

.bowel-time-type {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.bowel-time {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.bowel-details {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.bowel-detail {
  font-size: 24rpx;
  color: #666;
  background: rgba(255, 184, 0, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(255, 184, 0, 0.2);
}

.bowel-notes {
  margin-top: 8rpx;
}

.notes-text {
  font-size: 26rpx;
  color: #888;
  line-height: 1.4;
  font-style: italic;
}

/* 排便记录弹窗样式 */
.bowel-type-options {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.bowel-type-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 16rpx;
  background: #F8F8F8;
  transition: all 0.3s ease;
}

.bowel-type-btn.active {
  border-color: #FFB800;
  background: rgba(255, 184, 0, 0.1);
  box-shadow: 0 4rpx 12rpx rgba(255, 184, 0, 0.2);
}

.bowel-type-btn:active {
  transform: scale(0.95);
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.type-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.bowel-type-btn.active .type-text {
  color: #FFB800;
  font-weight: 600;
}

/* 选项网格布局 */
.option-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-top: 16rpx;
}

.option-btn {
  padding: 16rpx 12rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  background: #F8F8F8;
  font-size: 26rpx;
  color: #333;
  text-align: center;
  transition: all 0.3s ease;
  min-height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.option-btn.active {
  border-color: #FFB800;
  background: rgba(255, 184, 0, 0.1);
  color: #FFB800;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(255, 184, 0, 0.2);
}

.option-btn:active {
  transform: scale(0.95);
}

/* 备注输入框 */
.notes-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  background: #F8F8F8;
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-top: 16rpx;
  box-sizing: border-box;
}

.notes-textarea:focus {
  border-color: #FFB800;
  background: rgba(255, 184, 0, 0.05);
}

/* 响应式布局优化 */
@media screen and (max-width: 375px) {
  .option-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 10rpx;
  }
  
  .bowel-type-options {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .bowel-type-btn {
    flex-direction: row;
    padding: 16rpx;
  }
  
  .type-icon {
    font-size: 36rpx;
    margin-right: 12rpx;
    margin-bottom: 0;
  }
} 