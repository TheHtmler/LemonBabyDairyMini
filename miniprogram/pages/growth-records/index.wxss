.growth-container {
  padding: 20rpx 24rpx 60rpx;
  background: #fff5d6;
  min-height: 100vh;
  box-sizing: border-box;
}

.page-header {
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #4c3a00;
}

.page-subtitle {
  display: block;
  margin-top: 6rpx;
  color: #8a6b00;
  font-size: 24rpx;
}

.chart-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 184, 0, 0.15);
}

.chart-header {
  margin-bottom: 12rpx;
}

.chart-title {
  font-size: 26rpx;
  color: #3b2d00;
  font-weight: 600;
}

.chart-subtitle {
  display: block;
  margin-top: 4rpx;
  font-size: 22rpx;
  color: #9b7a00;
}

.chart-wrapper {
  height: 1000rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.chart-inner {
  width: 100%;
  height: 1000rpx;
}

.action-row {
  display: flex;
  gap: 12rpx;
  margin: 24rpx 0;
}

.action-btn {
  flex: 1;
  border-radius: 16rpx;
  font-size: 26rpx;
}

.action-btn.primary {
  background: #ffb800;
  color: #fff;
}

.action-btn.secondary {
  background: #fff;
  color: #4c3a00;
  border: 1rpx solid #ffd369;
}

.action-btn.ghost {
  background: #fffaf0;
  color: #8a6b00;
  border: 1rpx solid #ffe1a3;
}

.form-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 184, 0, 0.12);
}

.form-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #3b2d00;
  margin-bottom: 16rpx;
}

.form-item {
  margin-bottom: 16rpx;
}

.form-label {
  display: block;
  font-size: 24rpx;
  color: #7a5b00;
  margin-bottom: 8rpx;
}

.form-input {
  background: #fffaf0;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  font-size: 24rpx;
  border: 1rpx solid #ffe1a3;
}

.picker-value {
  background: #fffaf0;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  font-size: 24rpx;
  color: #7a5b00;
  border: 1rpx solid #ffe1a3;
}

.form-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 8rpx;
}

.milestone-section {
  margin-top: 12rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #3b2d00;
  margin-bottom: 16rpx;
}

.milestone-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.milestone-item {
  position: relative;
  padding-left: 30rpx;
}

.milestone-dot {
  position: absolute;
  left: 6rpx;
  top: 10rpx;
  width: 14rpx;
  height: 14rpx;
  background: #ffb800;
  border-radius: 50%;
}

.milestone-item::before {
  content: '';
  position: absolute;
  left: 12rpx;
  top: 30rpx;
  width: 2rpx;
  height: calc(100% - 10rpx);
  background: #ffe5a4;
}

.milestone-content {
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(255, 184, 0, 0.1);
}

.milestone-title {
  font-size: 26rpx;
  color: #3b2d00;
  font-weight: 600;
}

.milestone-date {
  font-size: 22rpx;
  color: #9b7a00;
  margin-top: 6rpx;
}

.milestone-notes {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #6a5200;
}

.empty-state {
  text-align: center;
  padding: 30rpx 0;
  color: #9b7a00;
  font-size: 24rpx;
}
