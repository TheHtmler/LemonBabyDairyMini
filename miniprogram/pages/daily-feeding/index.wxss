  color: #333;
}

.medication-volume {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}

.medication-time {
  font-size: 24rpx;
  color: #999;
}

/* Medication Modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.modal-content {
  width: 80%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  background-color: #FFF9E6;
  border-bottom: 1rpx solid rgba(255, 184, 0, 0.2);
  color: #333;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid rgba(255, 184, 0, 0.2);
}

.modal-btn {
  flex: 1;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  background: none;
}

.modal-btn.cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm {
  color: #FFB800;
  font-weight: bold;
}

