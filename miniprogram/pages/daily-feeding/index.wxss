.container {
  padding: 20rpx;
  background-color: #FFF9E6;
  min-height: 100vh;
}

.section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 184, 0, 0.15);
  border: 2rpx solid rgba(255, 184, 0, 0.2);
  position: relative;
  overflow: hidden;
  width: 90%;
}

.section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background-color: #FFE566;
  border-radius: 4rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(255, 184, 0, 0.2);
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #FFB800;
  border-radius: 50%;
  margin-right: 12rpx;
}

.section-header .section-title {
  margin-bottom: 0;
  border-bottom: none;
  padding-bottom: 0;
}

.add-record-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: rgba(255, 184, 0, 0.1);
  border-radius: 32rpx;
  border: 2rpx solid rgba(255, 184, 0, 0.2);
}

.add-record-btn:active {
  background: rgba(255, 184, 0, 0.2);
}

.add-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.add-record-btn text {
  font-size: 24rpx;
  color: #FFB800;
}

.subsection-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  position: relative;
  padding-left: 16rpx;
}

.subsection-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background-color: #FFB800;
  border-radius: 3rpx;
}

/* Weight Section */
.weight-input {
  width: 100%;
  height: 80rpx;
  background: #FFF9E6;
  border: 2rpx solid #FFB800;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333333;
  box-sizing: border-box;
  outline: none;
  margin-bottom: 16rpx;
  transition: border-color 0.2s;
}

.weight-input:focus {
  border-color: #FFD700;
  background: #FFF6CC;
}

.coefficient-wrapper {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
  gap: 16rpx;
}

.coefficient-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.coefficient-label {
  font-size: 26rpx;
  color: #666;
}

.coefficient-input {
  width: 100%;
  height: 60rpx;
  background: #FFF9E6;
  border: 2rpx solid rgba(255, 184, 0, 0.4);
  border-radius: 12rpx;
  font-size: 32rpx;
  color: #333;
}

.coefficient-input[disabled] {
  color: #FF8C00;
}

.coefficient-input-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.coefficient-unit {
  font-size: 26rpx;
  color: #666;
}

.unit {
  font-size: 28rpx;
  color: #666666;
  margin-left: 16rpx;
  background-color: rgba(255, 184, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

/* Calculations Section */
.calculation-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  border-bottom: 2rpx solid rgba(255, 184, 0, 0.1);
}

.calculation-item:last-child {
  border-bottom: none;
}

.calculation-item .label {
  font-size: 28rpx;
  color: #666666;
  white-space: nowrap;
  flex-shrink: 0;
}

.calculation-item .value {
  font-size: 32rpx;
  color: #FFB800;
  font-weight: 600;
  margin-left: 20rpx;
  white-space: nowrap;
  flex-shrink: 0;
  background-color: rgba(255, 184, 0, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

/* Feeding Controls */
.feeding-controls {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.control-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  background-color: rgba(255, 184, 0, 0.1);
  color: #666666;
  border: 2rpx solid rgba(255, 184, 0, 0.2);
  transition: all 0.3s ease;
}

.control-btn.active {
  background-color: #FFB800;
  color: #ffffff;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(255, 184, 0, 0.3);
}

.control-btn[disabled] {
  opacity: 0.5;
  background-color: #f0f0f0;
  border: 2rpx solid #e0e0e0;
  color: #999999;
}

/* Feeding Inputs */
.feeding-inputs {
  background-color: rgba(255, 184, 0, 0.05);
  border-radius: 12rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(255, 184, 0, 0.2);
}

.input-group {
  margin-bottom: 20rpx;
  width: 100%;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-group .label {
  display: block;
  margin-bottom: 10rpx;
}

.input-group input {
  width: 100%;
  height: 72rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
  background: #fff;
}

.input-group input::placeholder {
  color: #B5B5B5;
}

.food-selection-card {
  flex: 1;
  border: 2rpx solid rgba(0, 0, 0, 0.06);
  border-radius: 16rpx;
  padding: 16rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  box-sizing: border-box;
}

.selected-food-display {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.selected-food-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.food-category-tag {
  font-size: 22rpx;
  color: #FF8C00;
  background: rgba(255, 184, 0, 0.15);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.food-search-input {
  display: flex;
  align-items: center;
  background: #F7F7F7;
  border-radius: 12rpx;
  padding: 8rpx 12rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
}

.food-search-input input {
  flex: 1;
  border: none;
  background: transparent;
  font-size: 28rpx;
  color: #333;
}

.food-search-input input::placeholder {
  color: #999;
}

.search-icon {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.food-option-list {
  max-height: 320rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  border-radius: 12rpx;
  margin-top: 12rpx;
  padding: 8rpx 0;
  background: #FFF;
  box-sizing: border-box;
}

.food-list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.food-header-title {
  font-size: 26rpx;
  color: #555;
}

.food-add-btn {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 14rpx;
  border-radius: 12rpx;
  background: rgba(26, 152, 255, 0.08);
  color: #1a98ff;
  font-size: 24rpx;
}

.food-add-icon {
  font-size: 28rpx;
}

.food-option {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  flex-direction: column;
  align-items: flex-start;
}

.food-option + .food-option {
  border-top: 1rpx solid #F0F0F0;
}

.food-option.selected {
  background: rgba(255, 184, 0, 0.08);
  font-weight: 600;
}

.food-option-main {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.food-option-name {
  font-size: 22rpx;
  color: #333;
}

.food-option-tag {
  font-size: 18rpx;
  color: #999;
}

.food-option-add {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #FFB800;
  color: #ffffff;
  font-size: 24rpx;
  line-height: 1;
  visibility: hidden;
}

.food-option-add.active {
  visibility: visible;
}

.food-option-sub {
  font-size: 22rpx;
  color: #BBB;
  margin-top: 6rpx;
}

.food-option-empty {
  text-align: center;
  padding: 24rpx;
  font-size: 26rpx;
  color: #999;
}

/* 食物记录实验弹窗 */
.food-experiment-modal .modal-content {
  width: 88%;
  max-height: 84vh;
}

.food-experiment-body {
  padding: 16rpx 16rpx 24rpx;
  height: 62vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.food-experiment-search {
  flex-shrink: 0;
}

.food-experiment-select {
  display: flex;
  height: 100%;
  gap: 12rpx;
  min-height: 0;
}

.food-experiment-categories {
  width: 28%;
  background: #F7F7F7;
  border-radius: 12rpx;
  padding: 10rpx 0;
  overflow-y: auto;
  min-height: 0;
}

.food-experiment-categories .category-item {
  padding: 16rpx 12rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.food-experiment-categories .category-item.active {
  background: #ffffff;
  color: #FF8C00;
  font-weight: 600;
}

.food-experiment-list-panel {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
}

.food-experiment-option-list {
  flex: 1;
  max-height: none;
  height: 100%;
  min-height: 0;
}

.food-experiment-form-step {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #ffffff;
  border-radius: 16rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.06);
  padding: 16rpx;
  box-sizing: border-box;
}

.food-experiment-form-header {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #F0F0F0;
  margin-bottom: 16rpx;
  gap: 8rpx;
}

.food-experiment-title-group {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 6rpx;
}

.food-experiment-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.food-experiment-tag {
  font-size: 22rpx;
  color: #FF8C00;
  background: rgba(255, 184, 0, 0.15);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.food-experiment-switch {
  font-size: 24rpx;
  color: #1a98ff;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  background: rgba(26, 152, 255, 0.08);
  align-self: flex-start;
}

.food-experiment-form-body {
  flex: 1;
  overflow-y: auto;
}

.food-experiment-form-body .input-group input {
  height: 64rpx;
}

.food-experiment-form-body .label {
  white-space: nowrap;
}

.food-experiment-form-body picker {
  display: block;
  width: 100%;
}

.food-experiment-form-body .picker-value {
  width: 100%;
  height: 64rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border: 2rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  background: #fff;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #333;
}

.goal-hint-card {
  margin-top: 20rpx;
  padding: 20rpx;
  border-radius: 14rpx;
  background: rgba(67, 193, 255, 0.08);
  border: 2rpx solid rgba(67, 193, 255, 0.3);
}

.goal-hint-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #1a98ff;
  margin-bottom: 12rpx;
}

.goal-target-switch {
  display: flex;
  gap: 12rpx;
}

.goal-target-option {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  border: 2rpx solid rgba(26, 152, 255, 0.25);
  color: #1a98ff;
  font-size: 24rpx;
  background: rgba(26, 152, 255, 0.08);
}

.goal-target-option.active {
  background: #1a98ff;
  color: #ffffff;
  border-color: #1a98ff;
  font-weight: 600;
  box-shadow: 0 4rpx 10rpx rgba(26, 152, 255, 0.15);
}

.goal-calorie-input {
  margin-bottom: 12rpx;
}

.goal-calorie-label {
  display: block;
  font-size: 24rpx;
  color: #1a98ff;
  margin-bottom: 6rpx;
}

.goal-calorie-field {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: #ffffff;
  border-radius: 12rpx;
  border: 2rpx solid rgba(67, 193, 255, 0.3);
  padding: 10rpx 14rpx;
}

.goal-calorie-field input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.goal-calorie-unit {
  font-size: 22rpx;
  color: #1a98ff;
}

.goal-hint-row {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #555;
  margin-bottom: 8rpx;
}

.goal-hint-gap {
  padding: 12rpx 14rpx;
  margin-bottom: 14rpx;
  background: rgba(26, 152, 255, 0.06);
  border: 2rpx dashed rgba(26, 152, 255, 0.3);
  border-radius: 12rpx;
}

.goal-coef-row {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  font-size: 24rpx;
  color: #1a98ff;
  margin-bottom: 8rpx;
}

.goal-hint-value {
  color: #0077ff;
  font-weight: 600;
}

.goal-hint-desc {
  font-size: 24rpx;
  color: #888;
}

.goal-hint-section.goal-plan {
  margin-top: 14rpx;
  padding: 14rpx 16rpx;
  border-radius: 12rpx;
  background: #ffffff;
  border: 2rpx solid rgba(26, 152, 255, 0.15);
  box-shadow: inset 0 0 0 2rpx rgba(255, 255, 255, 0.4);
}

.goal-plan-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #1a98ff;
  margin-bottom: 10rpx;
}

.goal-plan-meta {
  font-size: 22rpx;
  color: #1780d6;
  background: rgba(26, 152, 255, 0.08);
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
}

.goal-plan-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10rpx;
  margin-bottom: 8rpx;
}

.goal-plan-item {
  background: rgba(26, 152, 255, 0.05);
  border-radius: 10rpx;
  padding: 10rpx 12rpx;
  border: 2rpx solid rgba(26, 152, 255, 0.12);
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.goal-plan-label {
  font-size: 22rpx;
  color: #4a4a4a;
}

.goal-plan-value {
  font-size: 28rpx;
  color: #0077ff;
  font-weight: 700;
}

.goal-plan-metrics {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  font-size: 22rpx;
  color: #1780d6;
}

.nutrient-row {
  margin-bottom: 16rpx;
  padding: 10rpx;
  display: flex;
  gap: 18rpx;
  font-size: 24rpx;
  background: rgba(255, 184, 0, 0.08);
}

.nutrient-row text {
  color: #FF8C00;
}

.milk-type-selector {
  display: flex;
  gap: 16rpx;
  margin: 10rpx 0 20rpx;
}

.milk-type-option {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  border-radius: 32rpx;
  border: 2rpx solid rgba(255, 184, 0, 0.4);
  font-size: 26rpx;
  color: #666;
}

.milk-type-option.active {
  background-color: rgba(255, 184, 0, 0.15);
  color: #FF9C00;
  border-color: #FFB800;
  font-weight: 600;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  border: 2rpx solid rgba(255, 184, 0, 0.2);
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #FFB800;
  box-shadow: 0 0 0 2rpx rgba(255, 184, 0, 0.2);
}

.input-wrapper input {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
}

.input-wrapper .value {
  font-size: 32rpx;
  color: #FFB800;
  font-weight: 600;
}

.input-wrapper .unit {
  font-size: 28rpx;
  color: #666666;
  margin-left: 16rpx;
  background-color: rgba(255, 184, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

/* Medication Section */
.medication-section {
  margin-top: 20rpx;
}

.medication-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.medication-item {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.medication-item.active {
  background-color: #ffd700;
}

.medication-item .dosage {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* Medication Records */
.medication-records {
  margin-top: 20rpx;
  padding: 0 20rpx;
}

/* Medication Group Styles */
.medication-group {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  border: 2rpx solid rgba(255, 184, 0, 0.15);
  box-shadow: 0 2rpx 8rpx rgba(255, 184, 0, 0.1);
}

.medication-group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #FFF9E6 0%, #FFF3CC 100%);
  border-bottom: 2rpx solid rgba(255, 184, 0, 0.15);
}

.medication-group-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.medication-group-count {
  font-size: 24rpx;
  color: #FFB800;
  background-color: rgba(255, 184, 0, 0.15);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.medication-group-records {
  padding: 0;
}

.medication-group .medication-record-item {
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid rgba(255, 184, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.medication-group .medication-record-item:last-child {
  border-bottom: none;
}

.medication-time-dose {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.medication-group .medication-time {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.medication-group .medication-volume {
  font-size: 26rpx;
  color: #666666;
  background-color: rgba(255, 184, 0, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
  width: fit-content;
}

.section-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.medication-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
}

.medication-record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.medication-record-item:last-child {
  border-bottom: none;
}

.medication-record-info {
  display: flex;
  flex-direction: column;
}

.medication-name {
  font-size: 28rpx;
  color: #333;
}

.medication-volume {
  font-size: 24rpx;
  color: #666;
  background-color: rgba(255, 184, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.medication-time {
  font-size: 24rpx;
  color: #999;
}

/* Dosage input container */
.dosage-input-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
  width: 50%;
}

.dosage-input {
  flex: 1;
  height: 64rpx;
  background: #FFF9E6;
  border: 2rpx solid #FFB800;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  outline: none;
  transition: border-color 0.2s;
}

