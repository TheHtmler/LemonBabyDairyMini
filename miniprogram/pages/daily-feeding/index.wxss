.container {
  padding: 20rpx;
  background-color: #FFF9E6;
  min-height: 100vh;
}

.section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 184, 0, 0.15);
  border: 2rpx solid rgba(255, 184, 0, 0.2);
  position: relative;
  overflow: hidden;
  width: 90%;
}

.section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background-color: #FFE566;
  border-radius: 4rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(255, 184, 0, 0.2);
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #FFB800;
  border-radius: 50%;
  margin-right: 12rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-header .section-title {
  margin-bottom: 0;
  border-bottom: none;
  padding-bottom: 0;
}

.add-record-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: rgba(255, 184, 0, 0.1);
  border-radius: 32rpx;
  border: 2rpx solid rgba(255, 184, 0, 0.2);
}

.add-record-btn:active {
  background: rgba(255, 184, 0, 0.2);
}

.add-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.add-record-btn text {
  font-size: 24rpx;
  color: #FFB800;
}

.subsection-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  position: relative;
  padding-left: 16rpx;
}

.subsection-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 24rpx;
  background-color: #FFB800;
  border-radius: 3rpx;
}

/* Weight Section */
.weight-input {
  width: 100%;
  height: 80rpx;
  background: #FFF9E6;
  border: 2rpx solid #FFB800;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333333;
  box-sizing: border-box;
  outline: none;
  margin-bottom: 16rpx;
  transition: border-color 0.2s;
}

.weight-input:focus {
  border-color: #FFD700;
  background: #FFF6CC;
}

.unit {
  font-size: 28rpx;
  color: #666666;
  margin-left: 16rpx;
  background-color: rgba(255, 184, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

/* Calculations Section */
.calculation-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 24rpx;
  border-bottom: 2rpx solid rgba(255, 184, 0, 0.1);
}

.calculation-item:last-child {
  border-bottom: none;
}

.calculation-item .label {
  font-size: 28rpx;
  color: #666666;
  white-space: nowrap;
  flex-shrink: 0;
}

.calculation-item .value {
  font-size: 32rpx;
  color: #FFB800;
  font-weight: 600;
  margin-left: 20rpx;
  white-space: nowrap;
  flex-shrink: 0;
  background-color: rgba(255, 184, 0, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

/* Feeding Controls */
.feeding-controls {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.control-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  background-color: rgba(255, 184, 0, 0.1);
  color: #666666;
  border: 2rpx solid rgba(255, 184, 0, 0.2);
  transition: all 0.3s ease;
}

.control-btn.active {
  background-color: #FFB800;
  color: #ffffff;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(255, 184, 0, 0.3);
}

.control-btn[disabled] {
  opacity: 0.5;
  background-color: #f0f0f0;
  border: 2rpx solid #e0e0e0;
  color: #999999;
}

/* Feeding Inputs */
.feeding-inputs {
  background-color: rgba(255, 184, 0, 0.05);
  border-radius: 12rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(255, 184, 0, 0.2);
}

.input-group {
  margin-bottom: 20rpx;
  width: 100%;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-group .label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  border: 2rpx solid rgba(255, 184, 0, 0.2);
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #FFB800;
  box-shadow: 0 0 0 2rpx rgba(255, 184, 0, 0.2);
}

.input-wrapper input {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
}

.input-wrapper .value {
  font-size: 32rpx;
  color: #FFB800;
  font-weight: 600;
}

.input-wrapper .unit {
  font-size: 28rpx;
  color: #666666;
  margin-left: 16rpx;
  background-color: rgba(255, 184, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

/* Medication Section */
.medication-section {
  margin-top: 20rpx;
}

.medication-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.medication-item {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.medication-item.active {
  background-color: #ffd700;
}

.medication-item .dosage {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
}

/* Medication Records */
.medication-records {
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.section-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.medication-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
}

.medication-record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.medication-record-item:last-child {
  border-bottom: none;
}

.medication-record-info {
  display: flex;
  flex-direction: column;
}

.medication-name {
