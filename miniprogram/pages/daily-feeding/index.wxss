.menu-btn {
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 12rpx;
  transition: background-color 0.2s ease;
}

.menu-btn:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.dot-menu {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100%;
  width: 100%;
  padding: 0 20rpx;
}

.dot {
  width: 6rpx;
  height: 6rpx;
  background-color: #999;
  border-radius: 50%;
  margin: 3rpx 0;
  transition: background-color 0.2s ease;
}

.menu-btn:hover .dot {
  background-color: #666;
}

.menu-options {
  position: absolute;
  right: 60rpx;
  top: 0;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12), 0 4rpx 8rpx rgba(0, 0, 0, 0.04);
  z-index: 100;
  opacity: 0;
  transform: scale(0.9) translateY(-8rpx);
  transform-origin: top right;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  pointer-events: none;
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  overflow: hidden;
  min-width: 140rpx;
  backdrop-filter: blur(10rpx);
}

.menu-options.show {
  opacity: 1;
  transform: scale(1) translateY(0);
  pointer-events: auto;
}

.menu-option {
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
  white-space: nowrap;
  transition: all 0.2s ease;
  position: relative;
  background-color: #fff;
}

.menu-option:last-child {
  border-bottom: none;
}

.menu-option:active {
  background-color: rgba(255, 184, 0, 0.08);
  transform: scale(0.98);
}

.menu-option.delete {
  color: #ff4757;
}

.menu-option.delete:active {
  background-color: rgba(255, 71, 87, 0.08);
}

