/* Animation for active states */
@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.control-btn.active {
  animation: pulse 1s infinite;
}

/* Tips Component */
