/* pages/analysis-report/index.wxss */

.container {
  padding: 0 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #F8F9FF 0%, #F0F7FF 50%, #E8F4FD 100%);
  padding-bottom: 140rpx; /* 给悬浮按钮留空间 */
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E0E0E0;
  border-top: 4rpx solid #FFD700;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 主要内容 */
.content {
  padding: 30rpx 30rpx 0;
  width: 100%;
}

/* 统计信息卡片 */
.statistics-card {
  background: linear-gradient(135deg, #FFFFFF 0%, #FEFEFE 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 215, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.statistics-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(90deg, #FFD700, #4CAF50, #2196F3);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stats-date {
  font-size: 24rpx;
  color: #666;
}

.stats-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.stat-divider {
  width: 1rpx;
  height: 60rpx;
  background: #E0E0E0;
  margin: 0 20rpx;
}

/* 筛选器 */
.filter-section {
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 20rpx;
  margin-right: 15rpx;
  background: white;
  border: 2rpx solid #E0E0E0;
  border-radius: 15rpx;
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.filter-item.active {
  background: linear-gradient(135deg, #FFD700 0%, #FFC107 100%);
  border-color: #FFB300;
  color: #333;
}

.filter-icon {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.filter-text {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

.filter-item.active .filter-text {
  color: #333;
  font-weight: 600;
}

/* 报告列表 */
.report-list {
  flex: 1;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}

/* 报告卡片 */
.report-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.report-card {
  background: white;
  border-radius: 20rpx;
  padding: 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(33, 150, 243, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.report-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(90deg, #2196F3, #4CAF50);
}

.report-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-date {
  display: flex;
  flex-direction: column;
}

.date-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.report-type {
  font-size: 24rpx;
  color: #2196F3;
  background: rgba(33, 150, 243, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  align-self: flex-start;
}

.card-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  width: 50rpx;
  height: 50rpx;
  background: #F5F5F5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #E0E0E0;
  transform: scale(0.95);
}

.action-icon {
  font-size: 24rpx;
}

/* 卡片内容 */
.card-content {
  margin-bottom: 20rpx;
}

.summary-stats {
  display: flex;
  justify-content: space-between;
  background: #F8F9FA;
  padding: 20rpx;
  border-radius: 15rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.summary-label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.summary-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.summary-value.normal {
  color: #4CAF50;
}

.summary-value.abnormal {
  color: #F44336;
}

.summary-value.rate {
  color: #2196F3;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  border-top: 1rpx solid #F0F0F0;
}

.status-indicator {
  display: flex;
  align-items: center;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-indicator.normal {
  background: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
}

.status-indicator.abnormal {
  background: rgba(244, 67, 54, 0.1);
  color: #F44336;
}

.status-text {
  font-size: 24rpx;
}

.view-detail {
  display: flex;
  align-items: center;
  color: #2196F3;
}

.detail-text {
  font-size: 24rpx;
  margin-right: 5rpx;
}

.detail-arrow {
  font-size: 20rpx;
  font-weight: bold;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 30rpx;
}

.loading-more-text {
  font-size: 26rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 30rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #BBB;
}

/* 悬浮添加按钮 */
.fab-container {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  z-index: 1000;
}

.fab-button {
  width: 60rpx !important;
  height: 60rpx !important;
  background: linear-gradient(135deg, #FFD700 0%, #FFC107 100%);
  color: #333;
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(255, 193, 7, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.fab-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.3), transparent);
  border-radius: 50%;
}

.fab-button:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(255, 193, 7, 0.5);
}

.fab-icon {
  font-size: 36rpx;
  font-weight: bold;
  position: relative;
  z-index: 1;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .stats-content {
    flex-wrap: wrap;
    gap: 20rpx;
  }
  
  .stat-item {
    min-width: 80rpx;
  }
  
  .summary-stats {
    flex-wrap: wrap;
    gap: 15rpx;
  }
}