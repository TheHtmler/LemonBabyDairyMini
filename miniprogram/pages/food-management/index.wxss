.container {
  min-height: 100vh;
  background: #fef8ec;
  padding: 32rpx 32rpx 120rpx;
  box-sizing: border-box;
}

.page-header {
  margin-bottom: 24rpx;
  width: 100%;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.page-subtitle {
  display: block;
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #888888;
}

.page-hint {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #c47b00;
}

.loading,
.empty {
  margin-top: 120rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999999;
}

.food-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
}

.category-card {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 184, 0, 0.15);
  padding: 24rpx;
}

.category-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.category-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.category-count {
  font-size: 24rpx;
  color: #999999;
}

.food-item {
  border-top: 1px solid #f5f5f5;
  padding: 20rpx 0;
}

.food-item:first-child {
  border-top: none;
  padding-top: 0;
}

.food-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.food-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.food-name {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.food-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
  object-fit: cover;
}

.food-unit {
  font-size: 24rpx;
  color: #999999;
}

.food-tag {
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  line-height: 1;
}

.food-tag.system {
  background: rgba(255, 184, 0, 0.15);
  color: #ff9b00;
}

.food-tag.custom {
  background: rgba(57, 197, 187, 0.18);
  color: #39c5bb;
}

.food-nutrition {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.nutrition-item {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.nutrition-item .label {
  font-size: 22rpx;
  color: #999999;
}

.nutrition-item .value {
  font-size: 26rpx;
  color: #333333;
}

.food-actions {
  margin-top: 16rpx;
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.food-actions .action-btn {
  margin: 0;
  padding: 0 28rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  border-radius: 32rpx;
}

.food-actions .action-btn.edit {
  background: #f0f5ff;
  color: #3a7afe;
  border: none;
}

.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ffb800, #ff9b00);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 12rpx 30rpx rgba(255, 184, 0, 0.4);
}

.add-icon {
  font-size: 60rpx;
  color: #ffffff;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background: #ffffff;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding: 32rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.modal-header {
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #333333;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding-right: 8rpx;
}

.form-item {
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-title {
  font-size: 26rpx;
  color: #666666;
  margin: 16rpx 0;
}

.form-row {
  display: flex;
  gap: 20rpx;
}

.form-item.half {
  flex: 1;
}

.form-label {
  font-size: 26rpx;
  color: #555555;
}


.input,
.picker-display {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  border-radius: 16rpx;
  background: #f7f7f7;
  font-size: 28rpx;
  color: #333333;
}

.picker {
  width: 100%;
}

.picker-display {
  display: flex;
  align-items: center;
}

.suggestions {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.suggestion {
  padding: 8rpx 20rpx;
  background: #f2f2f2;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #666666;
}

.custom-category-row {
  margin-top: 16rpx;
  display: flex;
  gap: 16rpx;
}


.custom-category-input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  border-radius: 16rpx;
  background: #f7f7f7;
  font-size: 26rpx;
  color: #333333;
  box-sizing: border-box;
}

.custom-category-button {
  min-width: 140rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #ffb800, #ff9b00);
  color: #ffffff;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  margin-top: 24rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 999rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn.cancel {
  background: #f5f5f5;
  color: #666666;
}

.btn.confirm {
  background: linear-gradient(135deg, #ffb800, #ff9b00);
  color: #ffffff;
}
