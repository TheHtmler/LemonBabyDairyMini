.container {
  padding: 30rpx;
  background-color: #fff;
  min-height: 100vh;
  box-sizing: border-box;
  width: 100%;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.tabs {
  display: flex;
  gap: 0;
  margin-bottom: 24rpx;
  background: #FFF3C2;
  padding: 6rpx;
  border-radius: 999rpx;
  box-shadow: inset 0 0 0 1rpx rgba(255, 184, 0, 0.3);
  width: 100%;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  min-width: 0;
  text-align: center;
  padding: 14rpx 0;
  border-radius: 999rpx;
  background: transparent;
  color: #7A6A2B;
  font-size: 26rpx;
  font-weight: 500;
  transition: background 0.2s ease, color 0.2s ease;
}

.tab-item.active {
  background: #FFB800;
  color: #2F2400;
  box-shadow: 0 6rpx 14rpx rgba(255, 184, 0, 0.25);
}

.form-group {
  background: #fafafa;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

form {
  width: 100%;
  box-sizing: border-box;
}

.form-section {
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-subtitle {
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
  margin: 10rpx 0 20rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
  font-weight: bold;
}

.input-container {
  display: flex;
  align-items: center;
  position: relative;
  width: 100%;
}

input {
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  height: 80rpx;
  line-height: 80rpx;
  vertical-align: middle;
}

input:focus {
  border-color: #FFD700;
  box-shadow: 0 0 0 2rpx rgba(255, 215, 0, 0.2);
}

.input-hint {
  position: absolute;
  right: 20rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #FFD700;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hint-icon {
  color: #333;
  font-size: 24rpx;
  font-weight: bold;
}

.input-description {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  padding-left: 10rpx;
}

.ratio-inputs {
  display: flex;
  align-items: center;
  width: 100%;
}

.input-item {
  flex: 1;
  position: relative;
}

.unit {
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
}

.ratio-separator {
  font-size: 36rpx;
  color: #666;
  margin: 0 20rpx;
  font-weight: bold;
}

.nutrition-result {
  background: #FFF9E6;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-left: 8rpx solid #FFD700;
}

.result-header {
  margin-bottom: 20rpx;
  text-align: center;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.result-subtitle {
  font-size: 24rpx;
  color: #999;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 12rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.result-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: #666;
}

.item-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.tips-card {
  background: #F6F9FE;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.tips-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.tips-text {
  font-size: 28rpx;
  color: #666;
}

.button-group {
  margin-top: 60rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.confirm-btn {
  background: #FFD700;
  color: #333;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
  width: 100%;
  border: none;
  box-sizing: border-box;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.reset-btn {
  background: #fff;
  color: #666;
  border: 2rpx solid #e0e0e0;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 16rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.confirm-btn:active {
  opacity: 0.9;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  transform: translateY(2rpx);
}

.reset-btn:active {
  background: #f5f5f5;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  padding: 30rpx;
  background: #FFD700;
  position: relative;
  text-align: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  color: #333;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-body text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
} 
