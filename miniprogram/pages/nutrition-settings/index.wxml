<view class="container">
  <view class="header">
    <text class="title">配奶设置</text>
    <text class="subtitle">为柠檬宝宝设置个性化配奶参数</text>
  </view>

  <view class="tabs">
    <view class="tab-item {{activeTab === 'mother' ? 'active' : ''}}" bindtap="onTabChange" data-tab="mother">
      <text>母乳</text>
    </view>
    <view class="tab-item {{activeTab === 'formula' ? 'active' : ''}}" bindtap="onTabChange" data-tab="formula">
      <text>普奶</text>
    </view>
    <view class="tab-item {{activeTab === 'special' ? 'active' : ''}}" bindtap="onTabChange" data-tab="special">
      <text>特奶</text>
    </view>
  </view>

  <form bindsubmit="formSubmit">
    <view class="form-group">
      <view class="form-section" hidden="{{activeTab !== 'mother'}}">
        <view class="form-item">
          <text class="label">母乳蛋白质浓度 (g/100ml)</text>
          <view class="input-container">
            <input type="digit" name="natural_milk_protein" value="{{inputValues.natural_milk_protein}}" placeholder="请输入母乳蛋白质浓度" confirm-type="done" />
          </view>
          <view class="input-description">每100ml母乳中含有的蛋白质量</view>
        </view>

        <view class="form-item">
          <text class="label">母乳脂肪 (g/100ml)</text>
          <view class="input-container">
            <input type="digit" name="natural_milk_fat" value="{{inputValues.natural_milk_fat}}" placeholder="请输入母乳脂肪含量" confirm-type="done" />
          </view>
          <view class="input-description">每100ml母乳中含有的脂肪</view>
        </view>

        <view class="form-item">
          <text class="label">母乳碳水 (g/100ml)</text>
          <view class="input-container">
            <input type="digit" name="natural_milk_carbs" value="{{inputValues.natural_milk_carbs}}" placeholder="请输入母乳碳水含量" confirm-type="done" />
          </view>
          <view class="input-description">每100ml母乳中含有的碳水</view>
        </view>

        <view class="form-item">
          <text class="label">母乳膳食纤维 (g/100ml)</text>
          <view class="input-container">
            <input type="digit" name="natural_milk_fiber" value="{{inputValues.natural_milk_fiber}}" placeholder="请输入母乳膳食纤维含量" confirm-type="done" />
          </view>
          <view class="input-description">每100ml母乳中含有的膳食纤维</view>
        </view>

        <view class="form-item">
          <text class="label">母乳热量 (kcal/100ml)</text>
          <view class="input-container">
            <input type="digit" name="natural_milk_calories" value="{{inputValues.natural_milk_calories}}" placeholder="请输入母乳热量" confirm-type="done" />
          </view>
          <view class="input-description">每100ml母乳所含热量</view>
        </view>
      </view>

      <view class="form-section" hidden="{{activeTab !== 'formula'}}">
        <view class="form-item">
          <text class="label">普奶蛋白质浓度 (g/100g)</text>
          <view class="input-container">
            <input type="digit" name="formula_milk_protein" value="{{inputValues.formula_milk_protein}}" placeholder="请输入普奶蛋白质浓度" confirm-type="done" />
          </view>
          <view class="input-description">每100g普通奶粉中含有的蛋白质量</view>
        </view>

        <view class="form-item">
          <text class="label">普奶脂肪 (g/100g)</text>
          <view class="input-container">
            <input type="digit" name="formula_milk_fat" value="{{inputValues.formula_milk_fat}}" placeholder="请输入普奶脂肪含量" confirm-type="done" />
          </view>
          <view class="input-description">每100g普通奶粉中含有的脂肪</view>
        </view>

        <view class="form-item">
          <text class="label">普奶碳水 (g/100g)</text>
          <view class="input-container">
            <input type="digit" name="formula_milk_carbs" value="{{inputValues.formula_milk_carbs}}" placeholder="请输入普奶碳水含量" confirm-type="done" />
          </view>
          <view class="input-description">每100g普通奶粉中含有的碳水</view>
        </view>

        <view class="form-item">
          <text class="label">普奶膳食纤维 (g/100g)</text>
          <view class="input-container">
            <input type="digit" name="formula_milk_fiber" value="{{inputValues.formula_milk_fiber}}" placeholder="请输入普奶膳食纤维含量" confirm-type="done" />
          </view>
          <view class="input-description">每100g普通奶粉中含有的膳食纤维</view>
        </view>

        <view class="form-item">
          <text class="label">普奶冲配比例</text>
          <view class="ratio-inputs">
            <view class="input-item">
              <input type="digit" name="formula_milk_ratio_powder" value="{{inputValues.formula_milk_ratio.powder}}" placeholder="请输入粉量" confirm-type="done" />
              <text class="unit">g粉</text>
            </view>
            <text class="ratio-separator">:</text>
            <view class="input-item">
              <input type="digit" name="formula_milk_ratio_water" value="{{inputValues.formula_milk_ratio.water}}" placeholder="请输入水量" confirm-type="done" />
              <text class="unit">ml水</text>
            </view>
          </view>
          <view class="input-description">普通奶粉的冲调比例，方便换算蛋白/热量</view>
        </view>

        <view class="form-item">
          <text class="label">普奶热量 (kcal/100g)</text>
          <view class="input-container">
            <input type="digit" name="formula_milk_calories" value="{{inputValues.formula_milk_calories}}" placeholder="请输入普奶热量" confirm-type="done" />
          </view>
          <view class="input-description">每100g普通奶粉所含热量</view>
        </view>
      </view>

      <view class="form-section" hidden="{{activeTab !== 'special'}}">
        <view class="form-item">
          <text class="label">特奶蛋白质浓度 (g/100g)</text>
          <view class="input-container">
            <input type="digit" name="special_milk_protein" value="{{inputValues.special_milk_protein}}" placeholder="请输入特奶蛋白质浓度" confirm-type="done" />
          </view>
          <view class="input-description">每100g特奶粉中含有的蛋白质量</view>
        </view>

        <view class="form-item">
          <text class="label">特奶脂肪 (g/100g)</text>
          <view class="input-container">
            <input type="digit" name="special_milk_fat" value="{{inputValues.special_milk_fat}}" placeholder="请输入特奶脂肪含量" confirm-type="done" />
          </view>
          <view class="input-description">每100g特奶粉中含有的脂肪</view>
        </view>

        <view class="form-item">
          <text class="label">特奶碳水 (g/100g)</text>
          <view class="input-container">
            <input type="digit" name="special_milk_carbs" value="{{inputValues.special_milk_carbs}}" placeholder="请输入特奶碳水含量" confirm-type="done" />
          </view>
          <view class="input-description">每100g特奶粉中含有的碳水</view>
        </view>

        <view class="form-item">
          <text class="label">特奶膳食纤维 (g/100g)</text>
          <view class="input-container">
            <input type="digit" name="special_milk_fiber" value="{{inputValues.special_milk_fiber}}" placeholder="请输入特奶膳食纤维含量" confirm-type="done" />
          </view>
          <view class="input-description">每100g特奶粉中含有的膳食纤维</view>
        </view>

        <view class="form-item">
          <text class="label">特奶冲配比例</text>
          <view class="ratio-inputs">
            <view class="input-item">
              <input type="digit" name="special_milk_ratio_powder" value="{{inputValues.special_milk_ratio.powder}}" placeholder="请输入粉量" confirm-type="done" />
              <text class="unit">g粉</text>
            </view>
            <text class="ratio-separator">:</text>
            <view class="input-item">
              <input type="digit" name="special_milk_ratio_water" value="{{inputValues.special_milk_ratio.water}}" placeholder="请输入水量" confirm-type="done" />
              <text class="unit">ml水</text>
            </view>
          </view>
          <view class="input-description">特殊配方奶的冲调比例</view>
        </view>

        <view class="form-item">
          <text class="label">特奶热量 (kcal/100g)</text>
          <view class="input-container">
            <input type="digit" name="special_milk_calories" value="{{inputValues.special_milk_calories}}" placeholder="请输入特奶热量" confirm-type="done" />
          </view>
          <view class="input-description">每100g特奶粉所含热量</view>
        </view>
      </view>
    </view>

    <view class="button-group">
      <button class="confirm-btn" form-type="submit">保存设置</button>
    </view>
  </form>
</view> 
