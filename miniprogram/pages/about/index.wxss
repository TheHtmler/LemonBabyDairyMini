/* pages/about/index.wxss */
.container {
  padding: 30rpx;
  background-color: #FFF8E6;
  min-height: 100vh;
  box-sizing: border-box;
}

.app-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 30rpx 0;
}

.app-logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  background-color: #FFD966;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFB800;
  margin-bottom: 10rpx;
}

.app-version {
  font-size: 24rpx;
  color: #999;
}

.section {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #FFB800;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #FFB800;
  padding-left: 20rpx;
}

.section-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.auth-item {
  margin-bottom: 20rpx;
}

.auth-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #555;
  margin-bottom: 10rpx;
}

.auth-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.contact-item {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.copyright {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin: 30rpx 0;
}