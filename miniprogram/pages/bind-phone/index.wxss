.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  min-height: 100vh;
  background-color: #FFF5D6;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: #FFB800;
  text-shadow: 0 2rpx 2rpx rgba(0, 0, 0, 0.1);
}

.form-container {
  width: 100%;
  max-width: 650rpx;
  padding: 40rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.description {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
  line-height: 1.5;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.input {
  width: 100%;
  height: 90rpx;
  border: 2rpx solid #FFE082;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
  background-color: #FFFBEA;
}

.error-message {
  color: #ff4d4f;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.btn-bind {
  width: 100%;
  height: 90rpx;
  background-color: #FFB800;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  box-shadow: 0 6rpx 10rpx rgba(255, 184, 0, 0.2);
}

.btn-bind:active {
  transform: scale(0.98);
}

.btn-bind[disabled] {
  background-color: #FFE082;
  color: rgba(255, 255, 255, 0.8);
}

.tip-section {
  width: 100%;
  max-width: 650rpx;
  margin-top: 30rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #FFB800;
  margin-bottom: 15rpx;
}

.tip-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.tip-content text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
} 