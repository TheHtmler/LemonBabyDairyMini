.settings-container {
  padding: 20px;
  background-color: #FFF5D6;
  min-height: 100vh;
}

.settings-group {
  background: white;
  border-radius: 16px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(255, 184, 0, 0.1);
}

.settings-title {
  font-size: 18px;
  font-weight: 500;
  color: #333;
  margin-bottom: 16px;
  padding-bottom: 10px;
  border-bottom: 1px solid #f0f0f0;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
}

.item-label {
  font-size: 16px;
  color: #666;
  flex: 1;
}

.item-input {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 8px;
  padding: 4px 12px;
}

.item-input input {
  width: 80px;
  text-align: right;
  font-size: 16px;
  color: #333;
}

.unit {
  font-size: 14px;
  color: #999;
  margin-left: 8px;
  min-width: 50px;
}

.tips {
  text-align: center;
  margin: 20px 0;
}

.warning {
  color: #ff9800;
  font-size: 14px;
  background: rgba(255, 152, 0, 0.1);
  padding: 8px 16px;
  border-radius: 20px;
}

.container {
  padding: 20rpx;
  background-color: #FFF9E6;
  min-height: 100vh;
}

.section {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 184, 0, 0.15);
  border: 2rpx solid rgba(255, 184, 0, 0.2);
  position: relative;
  overflow: hidden;
  width: 90%;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(255, 184, 0, 0.2);
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  background-color: #FFB800;
  border-radius: 50%;
  margin-right: 12rpx;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid rgba(255, 184, 0, 0.1);
}

.setting-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background-color: rgba(255, 184, 0, 0.05);
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  border: 2rpx solid rgba(255, 184, 0, 0.2);
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #FFB800;
  box-shadow: 0 0 0 2rpx rgba(255, 184, 0, 0.2);
}

.input-wrapper input {
  width: 120rpx;
  font-size: 28rpx;
  color: #333333;
  text-align: right;
}

.ratio-inputs {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.ratio-separator {
  font-size: 28rpx;
  color: #666666;
  margin: 0 8rpx;
}

.button-container {
  padding: 0 20px;
  margin-bottom: 40px;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, rgba(255, 245, 214, 0) 0%, #FFF5D6 100%);
  padding-top: 40px;
}

.save-button {
  width: 100%;
  height: 50px;
  border: none;
  border-radius: 25px;
  background: #e0e0e0;
  color: #999;
  font-size: 18px;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
  margin: 0 auto;
}

.save-button.active {
  background: #FFB800;
  color: white;
  transform: translateY(-2px);
  box-shadow: 0 8px 16px rgba(255, 184, 0, 0.3);
}

.save-button.active::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 100%;
  background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20"><path fill="rgba(255,255,255,0.2)" d="M10 0C4.48 0 0 4.48 0 10s4.48 10 10 10 10-4.48 10-10S15.52 0 10 0zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/></svg>');
  background-repeat: repeat;
  animation: buttonPattern 20s linear infinite;
  opacity: 0.5;
}

.button-icon {
  width: 24px;
  height: 24px;
  margin-right: 8px;
}

@keyframes buttonPattern {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(100px);
  }
} 